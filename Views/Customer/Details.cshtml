@model New_Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<br />
@if (Model.DateOfBirth != null)
{
    <ul>
        <li>Membership Type : @Model.MembershipType.Name</li>
        <li>Date of Birth : @Model.DateOfBirth</li>
    </ul>
}
else
{
    <ul><li>Membership Type : @Model.MembershipType.Name</li></ul>
}
<br />
@Html.ActionLink("Edit Details", "EditDetails", "Customer", new { id = Model.Id }, new { @class = "btn btn-default btn-primary", @role = "button" })