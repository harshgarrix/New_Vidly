@model New_Vidly.ViewModel.MovieFormViewModel
@{
    ViewBag.Title = "EditMovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Name == null)
{
    <h2>Fill in Movie Details</h2>
}
else
{
    <h2>Edit Details</h2>
}
@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.GenreTypesId)
        @Html.DropDownListFor(m => m.GenreTypesId, new SelectList(Model.genreTypes, "Id", "Name"), "Select", new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.GenreTypesId)
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.DateAdded)
        @Html.TextBoxFor(m => m.DateAdded, "{0:d MMM YYYY}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DateAdded)
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.NumberInStock)
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM YYYY}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.ReleaseDate)
    </div>
    <br />
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
