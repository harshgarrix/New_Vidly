@model New_Vidly.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.GenreTypes.Name</li>
    <li>Release Date: @Model.ReleaseDate</li>
    <li>Date Added: @Model.DateAdded</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
<br />
@Html.ActionLink("Edit Movie Details", "EditMovieDetails", "Movies", new { id = Model.Id }, new { @class = "btn btn-default btn-primary", @role = "button" })
